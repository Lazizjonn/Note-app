<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/splashScreen"
        android:name="uz.gita.noteapp.presentation.ui.screens.SplashScreen"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreen_to_mainScreen"
            app:destination="@id/mainScreen"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainScreen"
        android:name="uz.gita.noteapp.presentation.ui.screens.MainScreen"
        android:label="fragment_main_screen"
        tools:layout="@layout/fragment_main_screen"/>
    <fragment
        android:id="@+id/addNoteScreen"
        android:name="uz.gita.noteapp.presentation.ui.screens.AddNoteScreen"
        android:label="fragment_add_note_screen"
        tools:layout="@layout/fragment_add_note_screen" />
    <fragment
        android:id="@+id/addTaskScreen"
        android:name="uz.gita.noteapp.presentation.ui.screens.AddTaskScreen"
        android:label="fragment_add_task_screen"
        tools:layout="@layout/fragment_add_task_screen" />
    <fragment
        android:id="@+id/deletedNoteScreen"
        android:name="uz.gita.noteapp.presentation.ui.screens.DeletedNoteScreen"
        android:label="fragment_deleted_note_screen"
        tools:layout="@layout/fragment_deleted_note_screen" />
    <fragment
        android:id="@+id/deletedTaskScreen"
        android:name="uz.gita.noteapp.presentation.ui.screens.DeletedTaskScreen"
        android:label="fragment_deleted_task_screen"
        tools:layout="@layout/fragment_deleted_task_screen" />
    <fragment
        android:id="@+id/notePage"
        android:name="uz.gita.noteapp.presentation.ui.pager.NotePage"
        android:label="fragment_page_note"
        tools:layout="@layout/fragment_page_note" />
    <fragment
        android:id="@+id/taskPage"
        android:name="uz.gita.noteapp.presentation.ui.pager.TaskPage"
        android:label="fragment_page_task"
        tools:layout="@layout/fragment_page_task" />
</navigation>