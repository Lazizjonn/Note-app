<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <!--<item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="customTextItem" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@font/merriweather_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/merriweather_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dialog_style" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:fontFamily">@font/merriweather_regular</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/grey</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/positive</item>
        <!-- Used for the background -->
<!--        <item name="android:background">@color/teal</item>-->
    </style>
    <style name="positive">
        <!--Transparen and black text buttons-->
        <item name="android:background">#00555555</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>